{
    "database": {
        "rules": "database.rules.json"
    },
    "hosting": {
        "target": "solartify",
        "public": "build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}
